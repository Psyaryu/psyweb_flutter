{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Serve Flutter Web",
        "type": "shell",
        "command": "python",
        "args": [
          "-m",
          "http.server",
          "8000"
        ],
        "options": {
          "cwd": "${workspaceFolder}/build/web"
        },
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared"
        },
        "problemMatcher": []
      }
    ]
  }